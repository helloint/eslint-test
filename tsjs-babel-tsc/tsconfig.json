{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "declaration": true, // generate d.ts
    "emitDeclarationOnly": true, // enable this only if you choose babel to compile
    //"module": "esnext",  // default 'CommonJS'
    "target": "es5",
    // for app
    //    "target": "es2021", // for JavaScript Library, just compile from TS to JS
    "esModuleInterop": true,
    //    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      //      "es2018",
      "es2021",
      "dom"
    ],
    "moduleResolution": "node",
    "jsx": "react-jsx"
//    "allowJs": true
  }
}
